<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="사용자 설정">
        <EditTextPreference
            android:key="userName"
            android:summary="사용자 이름을 변경합니다. (앱 재시작 필요)"
            android:title="이름 변경" />
        <Preference
            android:key="userAlarm"
            android:summary="알림 사용 여부를 설정합니다."
            android:title="알림 설정" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="정보"
        app:allowDividerAbove="false">
        <Preference
            android:key="FAQ"
            android:title="FAQ" />
        <Preference
            android:key="newsSource"
            android:title="뉴스 출처" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="기타"
        app:allowDividerAbove="false">

        <Preference
            android:key="feedBack"
            android:title="문의하기" />
        <Preference
            android:key="openSource"
            android:title="오픈소스 라이선스" />
        <Preference
            android:key="version"
            android:summary="1.0"
            android:title="버전" />
    </PreferenceCategory>
</PreferenceScreen>